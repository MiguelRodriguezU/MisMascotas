<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/recycler_margin"
    card_view:cardCornerRadius="@dimen/recycler_corner_radius">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_mascota_card_foto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            card_view:srcCompat="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <ImageButton
                android:id="@+id/iv_mascota_card_hueso1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icons8_dog_bone_1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/tv_mascota_card_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_mascota_card_hueso1"
                android:layout_alignTop="@id/iv_mascota_card_hueso1"
                android:layout_toEndOf="@id/iv_mascota_card_hueso1"
                android:layout_toRightOf="@id/iv_mascota_card_hueso1"
                android:layout_marginLeft="@dimen/recycler_margin_nombre"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Nombre Mascota" />

            <ImageView
                android:id="@+id/iv_mascota_card_hueso2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                card_view:srcCompat="@drawable/icons8_dog_bone_2" />

            <TextView
                android:id="@+id/tv_mascota_card_raiting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_mascota_card_hueso2"
                android:layout_alignTop="@id/iv_mascota_card_hueso2"
                android:layout_toLeftOf="@id/iv_mascota_card_hueso2"
                android:layout_toStartOf="@id/iv_mascota_card_hueso2"
                android:layout_marginRight="@dimen/recycler_margin_puntuacion"
                android:gravity="center"
                android:textStyle="bold"
                android:text="5" />

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>